extends id1-layout

block content
  div(class="flex items-center")
    div(class="container mx-auto px-6")
      div(class="max-w-md mx-auto my-10 p-5")
        form(method="POST" action="/id1/register-app")
          div(class="text-center")
           h1(class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200") Register Application
          div(class="mb-4")
            label(class="block text-grey-darker text-sm font-bold mb-2", for="appname") Application Name: 
            input(class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker", id="appname", name="appname", type="text", placeholder="A force of one")
          div(class="mb-4")
            label(class="block text-grey-darker text-sm font-bold mb-2", for="appmail") Your Contact E-mail: 
            input(class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker", id="appmail", name="appmail", type="email", placeholder="contact@aforceof.one")
          div(class="flex items-center justify-between")
            button(class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded", type="submit") Register
