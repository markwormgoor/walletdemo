{
  "name": "walletdemo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install": "mkdir -p data/mongo data/wallets",
    "dev": "nodemon",
    "start": "node ./bin/www"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "debug": "~2.6.9",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "nodemonConfig": {
    "verbose": "true",
    "exec": "node ./bin/www",
    "events": {
      "start": "docker-compose up; cls || clear",
      "restart": "docker-compose restart",
      "quit": "docker-compose down"
    },
    "watch": [
      "bin/www",
      "app.js",
      "docker/"
    ]
  }
}
